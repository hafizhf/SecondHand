<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SecondHand" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/second_hand_primary</item>
        <item name="colorPrimaryVariant">@color/second_hand_primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/second_hand_secondary</item>
        <item name="colorSecondaryVariant">@color/second_hand_secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>
    <style name="ButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <!--  SECONDHAND CUSTOM STYLE  -->

    <!--  MaterialTextView  -->

    <style name="Heading1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Heading2" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Heading3" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Heading4" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/second_hand_neutral3</item>
    </style>

    <!--  Button  -->

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="materialThemeOverlay">@style/ButtonTheme</item>
        <item name="shapeAppearance">@style/Button.MakeItRounded</item>

        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:height">64dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ButtonOutlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="materialThemeOverlay">@style/ButtonTheme</item>
        <item name="shapeAppearance">@style/Button.MakeItRounded</item>

        <item name="strokeColor">@color/second_hand_primary</item>
        <item name="strokeWidth">1dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:height">64dp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="ButtonTheme" parent="">
        <item name="colorPrimary">@color/second_hand_primary</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Button.MakeItRounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">18sp</item>
    </style>

    <!--  TextField  -->

    <style name="InputField" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:background">@drawable/component_border</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:minHeight">56dp</item>
    </style>

    <!--  ShapeableImageView  -->

    <style name="ShapeAppearanceOverlay.SecondHand.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

</resources>