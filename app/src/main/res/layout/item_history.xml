<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:id="@+id/card_itemHistory"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/cardGambar"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:id="@+id/imageHistory"
            android:src="@drawable/ic_launcher_background"
            tools:ignore="ContentDescription" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvRiwayat"
        style="@style/Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/cardGambar"
        android:text="Riwayat"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvTanggalRiwayat"
        style="@style/Body2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:text="20 Apr, 14:04"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_toEndOf="@id/cardGambar"
        android:layout_marginStart="20dp"
        android:layout_below="@id/tvRiwayat"
        android:text="@string/jam_tangan_casio"
        android:id="@+id/tvRiwayatNama"
        style="@style/Heading4"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:maxLines="1"
        android:layout_toEndOf="@id/cardGambar"
        android:layout_marginStart="20dp"
        android:layout_below="@id/tvRiwayatNama"
        android:text="@string/rp_0_00"
        android:id="@+id/tvRiwayatHarga"
        style="@style/Heading4"/>

    <TextView
        android:id="@+id/tvRiwayatStatus"
        style="@style/Heading4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvRiwayatHarga"
        android:layout_marginStart="20dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/cardGambar"
        android:maxLines="1"
        android:text="Status :  "
        tools:ignore="HardcodedText" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/second_hand_neutral5"
        android:layout_marginTop="10dp"
        android:layout_below="@id/tvRiwayatStatus"/>



</RelativeLayout>