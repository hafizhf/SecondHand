<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/itemnotifikasi_card"
            app:cardElevation="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/itemnotifikasi_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_launcher_background"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/itemnotifikasi_tv_penawaranproduk"
            style="@style/Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/itemnotifikasi_card"
            android:text="@string/penawaran_produk" />

        <TextView
            android:id="@+id/itemnotifikasi_tv_tanggalpenawaran"
            style="@style/Body2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_alignParentEnd="true"
            android:text="20 Apr, 14:04" />

        <TextView
            android:id="@+id/itemnotifikasi_tv_namaprodukpenawaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:layout_toEndOf="@id/itemnotifikasi_card"
            android:layout_marginStart="20dp"
            android:layout_below="@id/itemnotifikasi_tv_penawaranproduk"
            android:text="@string/jam_tangan_casio"
            style="@style/Heading4"/>

        <TextView
            android:id="@+id/itemnotifikasi_tv_hargaproduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:layout_toEndOf="@id/itemnotifikasi_card"
            android:layout_marginStart="20dp"
            android:layout_below="@id/itemnotifikasi_tv_namaprodukpenawaran"
            android:text="Rp.250.000"
            style="@style/Heading4"/>

        <TextView
            android:id="@+id/itemnotifikasi_tv_hargaditawar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:layout_toEndOf="@id/itemnotifikasi_card"
            android:layout_marginStart="20dp"
            android:layout_below="@id/itemnotifikasi_tv_hargaproduk"
            android:text="ditawar_rp_200_000"
            style="@style/Heading4"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/itemnotifikasi_tv_hargaditawar"
            android:layout_marginTop="10dp"
            android:background="@color/second_hand_neutral5" />



</RelativeLayout>