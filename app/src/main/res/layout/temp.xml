<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/card_itemDaftarJual"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="12.5dp"
    android:layout_marginBottom="12.5dp"
    android:layout_marginStart="12.5dp"
    android:layout_marginEnd="12.5dp"
    app:strokeWidth="0dp"
    app:cardElevation="1dp"
    app:cardCornerRadius="12dp">

    <LinearLayout
        android:id="@+id/item_product_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageItemDaftarJual"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/placeholder"/>

        <TextView
            android:id="@+id/tv_namaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Nama Barang"
            android:textSize="13sp"
            style="@style/Heading4"/>

        <TextView
            android:id="@+id/tv_kategoriProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Kategori"
            android:textSize="12sp"
            android:textColor="@color/second_hand_neutral3"
            style="@style/Body1"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_hargaProduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:text="Rp 123.456"
            android:textSize="13sp"
            style="@style/Heading2"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>