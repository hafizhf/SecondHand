<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.introduction.FourthIntroFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="460dp"
        android:src="@drawable/intro_4"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Punya barang yang\nudah ga kepake?"
        style="@style/Heading1"
        android:layout_marginStart="25dp"/>

    <View
        android:layout_width="30dp"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginTop="3dp"
        android:layout_marginStart="25dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bisa jadi harta buat yang lain!\nJual barang bekasmu tanpa\npikir panjang!"
        android:layout_marginTop="10dp"
        style="@style/Body1"
        android:layout_marginStart="25dp"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>