<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="15dp"
    android:id="@+id/item_wishlist"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp"
    app:strokeColor="@color/second_hand_neutral2"
    app:strokeWidth="0.7dp"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="10dp">

        <!--        <ImageView-->
        <!--            android:id="@+id/iv_item_wishlist_image"-->
        <!--            android:layout_width="100dp"-->
        <!--            android:layout_height="100dp"-->
        <!--            android:scaleType="centerCrop"-->
        <!--            android:src="@drawable/placeholder"/>-->

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardElevation="1dp"
            app:strokeWidth="0dp"
            app:strokeColor="@color/second_hand_neutral2"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/iv_item_wishlist_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                tools:ignore="ContentDescription" />

        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="175dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginStart="10dp">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cv_item_wishlist_status_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardCornerRadius="3dp"
                android:layout_marginBottom="1dp">

                <TextView
                    android:id="@+id/tv_item_wishlist_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Accepted"
                    android:textSize="9sp"
                    style="@style/Heading3"
                    android:textColor="@color/white"
                    android:paddingTop="1dp"
                    android:paddingStart="4dp"
                    android:paddingEnd="4dp"
                    tools:ignore="HardcodedText,SmallSp" />

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_item_wishlist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Barang"
                android:textSize="14sp"
                style="@style/Heading3"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_item_wishlist_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Rp 000.000"
                style="@style/Body2"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/tv_item_wishlist_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="11sp"
                android:text="Location"
                style="@style/Body1"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="0dp"/>

        <ImageView
            android:id="@+id/btn_remove_wishlist"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:layout_marginStart="10dp"
            app:tint="@color/second_hand_danger"
            tools:ignore="ContentDescription" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>