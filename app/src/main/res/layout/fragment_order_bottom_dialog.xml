<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/bs_detail_popup"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="552dp"
    android:background="@color/second_hand_transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.bottomsheet.DetailBottomDialogFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp">

            <include
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/horizontalline"
                android:layout_marginBottom="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yeay kamu berhasil mendapat harga yang sesuai"
                style="@style/Heading3"/>

            <View
                android:layout_width="0dp"
                android:layout_height="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Segera hubungi pembeli melalui whatsapp untuk transaksi selanjutnya"
                style="@style/Body2"/>

            <View
                android:layout_width="0dp"
                android:layout_height="20dp"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:strokeWidth="1dp"
                app:strokeColor="@color/second_hand_neutral2"
                app:cardElevation="2dp"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="35dp"
                        android:padding="20dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardCornerRadius="12dp">

                            <ImageView
                                android:id="@+id/imagePembeliBottomSheet"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_placeholder_user"/>

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp">

                            <TextView
                                android:id="@+id/tvNamaPembeliBottomSheet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama Pembeli"
                                style="@style/Heading3"/>

                            <TextView
                                android:id="@+id/tvKotaPembeliBottomSheet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kota"
                                style="@style/Heading4"/>

                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardElevation="0dp"
                            app:strokeWidth="0dp"
                            app:cardCornerRadius="12dp">

                            <ImageView
                                android:id="@+id/imageProdukBottomSheet"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_launcher_background"/>

                        </com.google.android.material.card.MaterialCardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp">

                            <TextView
                                android:id="@+id/tvNamaProdukBottomSheet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nama Produk"
                                style="@style/Heading3"/>

                            <TextView
                                android:id="@+id/tvBasePriceProdukBottomSheet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Kota"
                                style="@style/Heading4"/>
                            <TextView
                                android:id="@+id/tvDitawarProdukBottomSheet"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ditawar Rp 200.000"
                                style="@style/Heading4"/>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Heading3"
                    android:layout_marginTop="10dp"
                    android:text="Product Match"
                    android:gravity="center"/>



            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/btnHubungiBottomSheet"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="15dp"
                android:text="Hubungi via Whatsapp"
                android:drawableEnd="@drawable/ic_fi_whatsapp"
                style="@style/Button"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>